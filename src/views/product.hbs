{{> nav }}

<div class="layout--container">
    <section class="product-layout">
        <article class="product-layout__img">
            <img src="{{item.front}}" alt="" id="img-main">

            <div class="preview">
                <button onclick="preview('{{item.front}}')"><img src="{{item.front}}" alt=""></button>
                {{#each item.imgs}}
                <button onclick="preview('{{this}}')"><img src="{{this}}" alt=""></button>
                {{/each}}
            </div>
        </article>
        <form action="/add-product" method="POST" class="product-layout__info">
            <input type="hidden" value="{{item.code}}" id="id" name="id">

            <h2 class="info__title">{{item.title}}</h2>
            <p class="info__cod" id="info__cod">COD - 000{{item.code}}</p>
            <p class="info__thereis" id="info__thereis">
                {{#if item.active}}
                Producto disponible
                {{else}}
                Sin disponibilidad
                {{/if}}
            </p>

            <p class="info__prom">$ {{item.price}} USD</p>

            <div class="quantity">
                <button onclick="productNumber('less')" type="button" class="btn--remove">-</button>
                <input type="number" name="quantity" min="1" value="1" max="20" class="quantity" id="quantity">
                <button onclick="productNumber('add')" type="button" class="btn--add">+</button>
            </div>

            <div class="buy">
                {{#if item.active}}
                <button class="CartBtn">
                    <span class="IconContainer">
                        <svg xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 576 512"
                            fill="rgb(255, 255, 255)" class="cart">
                            <path
                                d="M0 24C0 10.7 10.7 0 24 0H69.5c22 0 41.5 12.8 50.6 32h411c26.3 0 45.5 25 38.6 50.4l-41 152.3c-8.5 31.4-37 53.3-69.5 53.3H170.7l5.4 28.5c2.2 11.3 12.1 19.5 23.6 19.5H488c13.3 0 24 10.7 24 24s-10.7 24-24 24H199.7c-34.6 0-64.3-24.6-70.7-58.5L77.4 54.5c-.7-3.8-4-6.5-7.9-6.5H24C10.7 48 0 37.3 0 24zM128 464a48 48 0 1 1 96 0 48 48 0 1 1 -96 0zm336-48a48 48 0 1 1 0 96 48 48 0 1 1 0-96z">
                            </path>
                        </svg>
                    </span>
                    <p class="text">Añadir</p>
                </button>
                {{/if}}
                <a class="button ml" href="{{item.mercadoLibre}}" target="_blank">
                    <img src="/svg/g14.svg" alt="">
                </a>
            </div>

            <p class="info__disclaimer"><span>Nota.</span> Algunos de nuestros productos en tienda cuentan con una
                promoción especial, si opta por comprar mediante <span>mercado libre</span> esta promoción no se
                aplicará, pero su envío será gratuito.</p>

            </article>
        </form>
    </section>

    <section class="features">
        <h3>Características generales</h3>
        <div class="features__board">
            {{#each item.features}}
            {{#each this}}
            <p>{{this}}</p>
            {{/each}}
            {{/each}}
        </div>

        <h5>Descripción:</h5>
        <p class="features__description">{{item.description}}
        <p>

        <div class="features__description--footer"><i class="bi bi-shield-lock"></i>
            <p> Tu compra e información es 100% segura</p>
        </div>
        <div class="features__description--footer"><i class="bi bi-box-seam"></i>
            <p> Envíos a toda Venezuela - Despacho en Caracas</p>
        </div>


    </section>
</div>

<div class="recommendation">
    <h3>Productos que también te pueden interesar</h3>

    <section class="products">

        {{#each feedProducts}}
        {{> products }}
        {{/each}}

        <section class="align--right">
            <div class="button button--fill">
                <a href="/catalog">Más productos</a>
            </div>
        </section>
    </section>
</div>

{{> footer }}